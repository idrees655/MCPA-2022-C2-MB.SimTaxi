@using MB.SimTaxi.Mvc.Models.Cars;
@model CarCreateEditViewModel

@{
    ViewData["Title"] = "Create Car";
}


<h4>Create Car</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PlateNumber" class="control-label"></label>
                <input asp-for="PlateNumber" class="form-control" />
                <span asp-validation-for="PlateNumber" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Model" class="control-label"></label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Color" class="control-label"></label>
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label class="control-label">Driver Name</label>
                <select asp-for="DriverId" class="form-control" asp-items="@Model.SelectListDriver"></select>
            </div>

            <div class="form-group mt-4">
                <a class="btn btn-secondary me-2" asp-action="Index">Cancel</a>
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>