@using MB.SimTaxi.Mvc.Models.Cars;
@model CarTableDetailsViewModel

@{
    ViewData["Title"] = "Car Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete <span class="text-danger">@Model.Model : @Model.PlateNumber</span>?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PlateNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PlateNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Model)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Model)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Color)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Color)
        </dd>
        <dt class = "col-sm-2">
           Driver Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DriverFirstName)
            @Html.DisplayFor(model => model.DriverLastName)
        </dd>
    </dl>
    
    
    <form asp-action="Delete" class=" mt-3">
        <input type="hidden" asp-for="Id" />
        <a class="btn btn-secondary me-1" asp-action="Index">Cancel</a>
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>
