@using MB.SimTaxi.Mvc.Models.Bookings;
@model BookingViewModel

@{
    ViewData["Title"] = "Create";
}

<h4>Create a new booking</h4>
<hr />

<form asp-action="Create">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="FromAddress" class="control-label"></label>
                <input asp-for="FromAddress" class="form-control" />
                <span asp-validation-for="FromAddress" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <label asp-for="ToAddress" class="control-label"></label>
                <input asp-for="ToAddress" class="form-control" />
                <span asp-validation-for="ToAddress" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <label asp-for="PickupTime" class="control-label"></label>
                <input asp-for="PickupTime" class="form-control" />
                <span asp-validation-for="PickupTime" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <label asp-for="DriverId" class="control-label">Driver</label>
                <select asp-for="DriverId" class="form-control select2" asp-items="@Model.SelectListDrivers"></select>
            </div>

            <div class="form-group mt-3">
                <label class="control-label">Car</label>
                <select asp-for="CarId" class="form-control select2" asp-items="@Model.SelectListCars"></select>
            </div>

            <div class="form-group mt-3">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group form-check mt-3">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsPaid" /> @Html.DisplayNameFor(model => model.IsPaid)
                </label>
            </div>
        </div>

        <div class="col-md-6">
            
            <div class="form-group">
                <label asp-for="PassengerIds" class="control-label">Passengers</label>
                <select asp-for="PassengerIds" class="form-control" asp-items="@Model.MultiSelectPassengers"></select>
            </div>

        </div>
    </div>

    <div class="form-group mt-4">
        <a class="btn btn-secondary me-1" asp-action="Index">Cancel</a>
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>

</form>

