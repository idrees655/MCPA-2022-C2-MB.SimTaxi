@using MB.SimTaxi.Mvc.Models.Bookings;
@model BookingDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Booking</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FromAddress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FromAddress)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ToAddress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ToAddress)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PickupTime)
        </dt>
        <dd class="col-sm-10">
            @Model.PickupTime.ToLongDateString()
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsPaid)
        </dt>
        <dd class="col-sm-10">

            @if (@Model.IsPaid)
            {
                <i class="fa-solid fa-circle-check text-success"></i>
            }
            else
            {
                <i class="fa-solid fa-circle-xmark text-danger"></i>
            }

        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DriverFullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DriverFullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CarPlateNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CarPlateNumber)
        </dd>
    </dl>
</div>

<hr />
<h4 class="my-4">Booking Passengers</h4>
<table class="table data-table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Gender</th>
            <th>Mobile Number</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var passenger in Model.Passengers)
        {
            <tr>
                <td>@passenger.Id</td>
                <td>@passenger.FullName</td>
                <td>@passenger.Gender</td>
                <td>

                    <a class="text-decoration-none" href="tel:@passenger.MobileNumber" title="Call Now: @passenger.MobileNumber" data-bs-toggle="tooltip">
                        <i class="fa-solid fa-phone text-primary"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="my-4">
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
</div>
